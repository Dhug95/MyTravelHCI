<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/customGreen</item>
        <item name="colorPrimaryDark">@color/customGreenDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Base custom theme. -->
    <style name="Theme.Shrine" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/customGreen</item>
        <item name="colorPrimaryDark">@color/customGreenDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- No action bar theme. -->
    </style>

    <style name="Theme.Shrine.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/customGreen</item>
        <item name="colorPrimaryDark">@color/customGreenDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Widget.Shrine.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">?attr/colorPrimary</item>
    </style>

    <style name="Widget.Shrine.FacebookButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/colorFacebook</item>
    </style>

    <style name="Widget.Shrine.GoogleButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@android:color/holo_red_dark</item>
    </style>

</resources>
